// Library
@import "kouto-swiss"

// Reset
meyer-reset()

// Colors for my design
main-font-color             = #333333
second-font-color           = #F0F0F0
third-font-color            = #3498DB

main-background-color       = #F0F0F0
second-background-color     = #3498DB

// Font for my design
font-size                   = 16px
font-height                 = 24px

font-labeur                 = "Helvetica Neue", "Helvetica", "Arial", sans-serif
font-heading                = "Lobster", cursive

// Refresh button
.loadAnimation
    animation load 1.5s infinite linear

@keyframes load
    0%
        transform rotate(0deg)
    50%
        transform rotate(180deg)
    100%
        transform rotate(360deg)

// General style
html
    height 100%
    position relative

#gmap
    position absolute
    top 0
    right 0
    bottom -200px
    left 0
    width 100%
    height 100%
    z-index -100

// Style du header
.header
    clearfix()
    width 100%
    background second-background-color
    padding 1em 0
.header__wrapper
    max-width 400px
    margin 0 auto
.header__title
    float left
    font 1.75em font-heading
    font-weight bold
    color second-font-color

    .title__link
        text-decoration: none
        color: white
.header__menu, .header__refresh
    display block
    float right
    margin 0 0.75em

// Style de la liste
#list__show
    display block

.list
    display none
    width 260px
    max-height 280px
    overflow auto
    margin 0 auto
    background second-font-color
    box-shadow 0px 5px 10px 0px rgba(50, 50, 50, 0.75)
.list__item
    padding 0.75em 2em
    border-bottom 2px solid second-background-color
    &:last-child
        border-bottom none

.banks
    clearfix()
.banks__link
    text-decoration none
    color main-font-color
.banks__img, .banks__body
    float left
.banks__body
    margin 0.075em 0 0 0.5em
.banks__dist
    float right
    color third-font-color

// Specific bank
.bank
    position absolute
    bottom 1em
    left 0
    right 0
    width 260px
    margin 0 auto
    background second-font-color
    box-shadow 0px 5px 10px 0px rgba(50, 50, 50, 0.75)
.bank__title
    font 1.15em font-heading
    font-weight bold
    color white
    padding 0.75em 1.5em
    background-color second-background-color
.bank__content
    clearfix()
    padding 0.75em 2em
    .bank__address
        float left
    .bank__dist
        float right
        color white
        padding 0.5em
        border-radius 0.5em
        background-color second-background-color
